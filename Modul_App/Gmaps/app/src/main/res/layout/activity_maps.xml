<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".MapsActivity">

    <LinearLayout
        android:id="@+id/layoutmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:layout="@layout/activity_main" />

    </LinearLayout>

    <TextView
        android:id="@+id/labellatitudemap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutmap"
        android:padding="15dp"
        android:text="Latitude"/>

    <TextView
        android:id="@+id/latitudemap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labellatitudemap"
        android:padding="15dp"
        android:text="Latitude"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/labellongtitudedemap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latitudemap"
        android:padding="15dp"
        android:text="Longtitude"/>

    <TextView
        android:id="@+id/longtitudedemap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labellongtitudedemap"
        android:padding="15dp"
        android:text="Longtitude"
        android:textColor="@color/black"/>

</RelativeLayout>